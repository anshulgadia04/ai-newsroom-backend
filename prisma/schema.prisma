generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String?
  email      String?   @unique
  imageUrl   String?
  provider   String?
  providerId String?
  createdAt  DateTime  @default(now())
  articles   Article[] @relation("UserArticles")
}

model Article {
  id          String   @id @default(uuid())
  title       String
  notes       String
  category    String
  createdById String
  createdBy   User     @relation("UserArticles", fields: [createdById], references: [id])
  createdAt   DateTime @default(now())
}
