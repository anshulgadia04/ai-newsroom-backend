generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  imageUrl  String?
  createdAt DateTime  @default(now())

  // This is one side of the relation
  articles  Article[] @relation("UserArticles")
}

model Article {
  id          String   @id @default(cuid())
  title       String
  notes       String
  category    String
  content     String
  createdAt   DateTime @default(now())

  // This is the other side of the same relation
  createdBy   User?    @relation("UserArticles", fields: [createdById], references: [id])
  createdById String?
}
